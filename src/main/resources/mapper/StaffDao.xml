<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.StaffDao">

	<!-- 根据id查询员工（已测试） -->
	<select id="queryStaffById" resultType="staff"
		parameterType="String">
		select
		*
		from
		staff
		where staff_number = #{id}
	</select>

	<!-- 添加员工 -->
	<insert id="addStaff">
		insert into staff
		(staff_number,name,level,birthday,phone,address) values
		(#{staff_number},#{name},#{level},#{birthday},#{phone},#{address})
	</insert>

	<!-- 修改员工 -->
	<update id="modifyStaff">
		update staff
		set
		name=#{name},phone=#{phone},birthday=#{birthday}
		where
		staff_number=#{id}
	</update>

	<!-- 修改个人信息 -->
	<update id="modifyInfo">
		update staff
		set staff_number=#{newStaffNumber},name=#{newName},department=#{newDepartment},position=#{newPosition},birthday=#{newBirthday},phone=#{newPhone},address=#{newAddress}
		where staff_number=#{staffNumber}
	</update>
	
	<!-- 查找所有员工 -->
	<select id="queryAll" resultType="staff" parameterType="String">
		select
		*
		from  staff
	</select>
	
</mapper>